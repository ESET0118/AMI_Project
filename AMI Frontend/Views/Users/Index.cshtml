@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-dark">👥 System Users</h4>
        <button id="refreshUsers" class="btn btn-success btn-sm shadow-sm">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>User ID</th>
                        <th>Email</th>
                        <th>Display Name</th>
                        <th>Role</th>
                        <th>Created At</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    <tr><td colspan="5" class="text-center text-muted py-4">Loading users...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    // Load users via proxy
    function loadUsers() {
        $("#userTableBody").html("<tr><td colspan='5' class='text-center text-muted py-4'>Loading...</td></tr>");

        $.ajax({
            url: "/Users/GetAll",
            method: "GET",
            success: function (data) {
                console.log(data); // For debugging

                if (!data || data.length === 0) {
                    $("#userTableBody").html("<tr><td colspan='5' class='text-center text-muted py-4'>No users found.</td></tr>");
                    return;
                }

                let rows = "";
                data.forEach(u => {
                    rows += `
                        <tr>
                            <td>${u.userId}</td>
                            <td>${u.email}</td>
                            <td>${u.displayName}</td>
                            <td>${u.role}</td>
                            <td>${new Date(u.createdAt).toLocaleDateString()}</td>
                        </tr>`;
                });
                $("#userTableBody").html(rows);
            },
            error: function (xhr) {
                console.error(xhr);
                let msg = "Error loading users.";
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    msg = xhr.responseJSON.message;
                }
                $("#userTableBody").html(`<tr><td colspan='5' class='text-center text-danger py-4'>${msg}</td></tr>`);
            }
        });
    }

    $(document).ready(loadUsers);
    $("#refreshUsers").click(loadUsers);
</script>

<style>
    body {
        background-color: #f8f9fa;
        font-family: "Inter", system-ui, sans-serif;
    }

    .card {
        border-radius: 1rem !important;
    }

    table th {
        font-weight: 600;
        color: #333;
    }

    .btn-success {
        background: linear-gradient(90deg, #00b3d8, #00d084);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(90deg, #00d084, #00b3d8);
        }
</style>
