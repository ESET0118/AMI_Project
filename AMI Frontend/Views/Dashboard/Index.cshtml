@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="dashboard-container min-vh-100">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm py-3" style="background: linear-gradient(90deg, #00b3d8, #00d084);">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">⚡ AMI Dashboard</a>
            <div class="d-flex align-items-center">
                <span class="text-white me-3" id="userName">Welcome, User</span>
                <button id="logoutBtn" class="btn btn-light btn-sm">Logout</button>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-dark">Smart Meter Overview</h2>
            <p class="text-muted">Real-time monitoring and analytics for your connected energy meters</p>
        </div>

        <!-- Summary Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Active Meters</h5>
                    <h2 class="fw-bold text-success">24</h2>
                    <p class="text-muted small">Total meters currently online</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Power Usage</h5>
                    <h2 class="fw-bold text-primary">312 kWh</h2>
                    <p class="text-muted small">Total energy used today</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Alerts</h5>
                    <h2 class="fw-bold text-danger">3</h2>
                    <p class="text-muted small">High consumption warnings</p>
                </div>
            </div>
        </div>

        <!-- Chart Placeholder -->
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <h5 class="fw-bold text-dark mb-3">Daily Power Usage Trends</h5>
            <div class="chart-placeholder d-flex align-items-center justify-content-center text-muted">
                <p>📊 Chart will load here (connect backend or JS chart library)</p>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        background: #f8f9fa;
        font-family: "Inter", system-ui, sans-serif;
    }

    .card-energy {
        transition: all 0.3s ease-in-out;
    }

        .card-energy:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 18px rgba(0, 179, 216, 0.2);
        }

    .chart-placeholder {
        height: 300px;
        border: 2px dashed #cce5ff;
        border-radius: 12px;
        background-color: #f0faff;
    }

    @@media (max-width: 768px) {
        .navbar-brand {
            font-size: 1.2rem;
        }

        .card h2 {
            font-size: 1.5rem;
        }
    }
</style>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Simulate fetching user info from stored token
    $(document).ready(function () {
        const token = localStorage.getItem("jwtToken");
        if (!token) {
            window.location.href = "/Account/Login";
        } else {
            // You can decode token and display username here
            $("#userName").text("Welcome, Energy User");
        }
    });

    // Logout logic
    $("#logoutBtn").click(function () {
        localStorage.removeItem("jwtToken");
        window.location.href = "/Account/Login";
    });
</script>
