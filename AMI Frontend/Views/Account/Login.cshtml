@{
    ViewBag.Title = "Login";
    Layout = null; // standalone login page
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="login-card row shadow-lg rounded-4 overflow-hidden w-100" style="max-width: 900px;">
        <!-- Left Panel -->
        <div class="col-md-6 left-panel d-flex flex-column justify-content-center p-5 text-white">
            <h1 class="fw-bold mb-3">Welcome Back ⚡</h1>
            <p class="lead">Monitor, manage, and save energy efficiently with our Smart Metering System.</p>
        </div>

        <!-- Right Panel -->
        <div class="col-md-6 right-panel p-5">
            <h3 class="text-center mb-4 fw-semibold">Login</h3>

            <form id="loginForm">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter your password" required>
                </div>

                <button type="submit" class="btn btn-energy w-100 py-2 fw-semibold">Login</button>
            </form>

            <div class="text-center mt-3">
                <p>
                    New user?
                    <a href="/Account/Register" class="text-decoration-none fw-semibold text-accent">Register here</a>
                </p>
            </div>

            <p class="error-message text-center mt-2" id="errorMsg">@ViewBag.Error</p>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        font-family: "Inter", system-ui, sans-serif;
        background: linear-gradient(135deg, #00b3d8 0%, #00d084 100%);
        transition: all 0.4s ease-in-out;
    }

        body.dark-mode {
            background: radial-gradient(circle at 10% 20%, #0f2027, #203a43, #2c5364);
            color: #eafaf2;
        }

    .login-card {
        background-color: transparent;
        border: none;
    }

    .left-panel {
        background: linear-gradient(160deg, #00b3d8, #00d084);
        color: #fff;
    }

    body.dark-mode .left-panel {
        background: linear-gradient(160deg, #1e3c72, #2a5298);
        box-shadow: inset 0 0 30px rgba(0, 0, 0, 0.3);
    }

    .right-panel {
        background-color: #ffffff;
        color: #222;
        transition: all 0.3s ease;
    }

    body.dark-mode .right-panel {
        background-color: #1c1c1c;
        color: #eafaf2;
        box-shadow: 0 0 30px rgba(0, 255, 200, 0.1);
    }

    .form-control {
        background-color: #fff;
        border: 1px solid #ddd;
        color: #222;
        transition: all 0.3s ease;
    }

    body.dark-mode .form-control {
        background-color: #2a2a2a;
        border: 1px solid #444;
        color: #eafaf2;
    }

    .form-control:focus {
        border-color: #00b3d8;
        box-shadow: 0 0 0 0.25rem rgba(0,179,216,0.25);
    }

    body.dark-mode .form-control:focus {
        border-color: #00ffc6;
        box-shadow: 0 0 0 0.25rem rgba(0,255,198,0.25);
    }

    .btn-energy {
        background: linear-gradient(90deg, #00b3d8, #00d084);
        border: none;
        color: white;
        font-size: 1.05rem;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

    body.dark-mode .btn-energy {
        background: linear-gradient(90deg, #00ffc6, #008cff);
        color: #121212;
        font-weight: 600;
    }

    .btn-energy:hover {
        transform: translateY(-2px);
        opacity: 0.9;
    }

    .text-accent {
        color: #00b3d8;
    }

    body.dark-mode .text-accent {
        color: #00ffc6;
    }

    .error-message {
        color: #dc3545;
        font-size: 0.9rem;
    }

    @@media (max-width: 768px) {
        .left-panel

    {
        display: none;
    }

    .right-panel {
        padding: 2rem 1.5rem;
    }

    }
</style>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Dark mode handling
        const isDark = localStorage.getItem("theme") === "dark";
        if (isDark) document.body.classList.add("dark-mode");

        // Handle login form submit
        $("#loginForm").submit(function (e) {
            e.preventDefault();
            $("#errorMsg").text("");

            $.ajax({
                url: "https://localhost:7199/api/auth/login",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({
                    email: $("#email").val(),
                    password: $("#password").val()
                }),
                success: function (response) {
                    const token = response.token;
                    if (!token) {
                        $("#errorMsg").text("Token not received from server.");
                        console.log(response);
                        return;
                    }

                    localStorage.setItem("jwtToken", token);

                    $.ajax({
                        url: "/Account/SaveToken",
                        method: "POST",
                        contentType: "application/json",
                        data: JSON.stringify({ token }),
                        success: function () {
                            window.location.href = "/Dashboard/Index";
                        },
                        error: function () {
                            $("#errorMsg").text("Failed to save token to session.");
                        }
                    });
                },
                error: function (xhr) {
                    $("#errorMsg").text("Login failed: " + (xhr.responseJSON?.message || xhr.statusText));
                }
            });
        });
    });
</script>
