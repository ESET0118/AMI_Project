@{
    ViewBag.Title = "Time of Day Rules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-success mb-0">
            <i class="bi bi-clock-history me-2"></i> Time of Day (TOD) Rules
        </h4>
        <div>
            <button id="refreshTOD" class="btn btn-outline-success me-2">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
            <button id="addRuleBtn" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Add Rule
            </button>
        </div>
    </div>

    <div id="todCardsContainer" class="row g-4"></div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="ruleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg" style="backdrop-filter: blur(8px); background: rgba(255,255,255,0.95);">
            <div class="modal-header border-0 bg-success text-white rounded-top-4">
                <h5 class="modal-title fw-semibold" id="ruleModalTitle"><i class="bi bi-pencil-square me-2"></i> Manage TOD Rule</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="ruleForm">
                    <input type="hidden" id="ruleId">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Start Time</label>
                            <input type="time" id="startTime" class="form-control rounded-3 shadow-sm" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">End Time</label>
                            <input type="time" id="endTime" class="form-control rounded-3 shadow-sm" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Rate Multiplier</label>
                            <input type="number" id="multiplier" step="0.1" min="0" class="form-control rounded-3 shadow-sm" required>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0 bg-light rounded-bottom-4">
                <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg"></i> Cancel
                </button>
                <button type="button" id="saveRuleBtn" class="btn btn-success px-4">
                    <i class="bi bi-check-lg"></i> Save Rule
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // --- Hardcoded TOD Rules ---
    let todRules = [
        { ruleId: 1, startTime: "06:00", endTime: "10:00", multiplier: 1.5 },
        { ruleId: 2, startTime: "10:00", endTime: "18:00", multiplier: 1.0 },
        { ruleId: 3, startTime: "18:00", endTime: "22:00", multiplier: 1.8 },
        { ruleId: 4, startTime: "22:00", endTime: "06:00", multiplier: 2.2 }
    ];

    // --- Render Cards ---
    function renderTODCards() {
        const container = $("#todCardsContainer");
        container.empty();

        if (todRules.length === 0) {
            container.html('<div class="col-12 text-center text-muted py-5">No TOD rules available.</div>');
            return;
        }

        todRules.forEach(rule => {
            const card = `
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card border-0 shadow-sm rounded-4 tod-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="fw-bold text-success mb-0">Rule #${rule.ruleId}</h6>
                                <span class="badge bg-light text-dark fw-normal px-3 py-2">×${rule.multiplier}</span>
                            </div>
                            <div class="small text-muted"><i class="bi bi-clock"></i> ${rule.startTime} → ${rule.endTime}</div>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-end">
                            <button class="btn btn-sm btn-outline-primary me-2" onclick="openEdit(${rule.ruleId})">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteRule(${rule.ruleId})">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>`;
            container.append(card);
        });
    }

    // --- Add Rule ---
    $("#addRuleBtn").click(() => {
        $("#ruleModalTitle").html('<i class="bi bi-plus-circle me-2"></i> Add TOD Rule');
        $("#ruleForm")[0].reset();
        $("#ruleId").val("");
        new bootstrap.Modal(document.getElementById("ruleModal")).show();
    });

    // --- Edit Rule ---
    function openEdit(id) {
        const rule = todRules.find(r => r.ruleId === id);
        if (!rule) return;

        $("#ruleModalTitle").html('<i class="bi bi-pencil-square me-2"></i> Edit TOD Rule');
        $("#ruleId").val(rule.ruleId);
        $("#startTime").val(rule.startTime);
        $("#endTime").val(rule.endTime);
        $("#multiplier").val(rule.multiplier);

        new bootstrap.Modal(document.getElementById("ruleModal")).show();
    }

    // --- Save Rule ---
    $("#saveRuleBtn").click(() => {
        const id = $("#ruleId").val();
        const newRule = {
            ruleId: id ? parseInt(id) : Date.now(),
            startTime: $("#startTime").val(),
            endTime: $("#endTime").val(),
            multiplier: parseFloat($("#multiplier").val())
        };

        if (id) {
            const index = todRules.findIndex(r => r.ruleId === newRule.ruleId);
            if (index !== -1) todRules[index] = newRule;
        } else {
            todRules.push(newRule);
        }

        bootstrap.Modal.getInstance(document.getElementById("ruleModal")).hide();
        renderTODCards();
    });

    // --- Delete Rule ---
    function deleteRule(id) {
        if (confirm("Are you sure you want to delete this rule?")) {
            todRules = todRules.filter(r => r.ruleId !== id);
            renderTODCards();
        }
    }

    // --- Refresh ---
    $("#refreshTOD").click(() => {
        // Simulate refresh delay for UX feedback
        const btn = $("#refreshTOD");
        btn.prop("disabled", true).html('<i class="bi bi-arrow-repeat spin me-1"></i> Refreshing...');
        setTimeout(() => {
            btn.prop("disabled", false).html('<i class="bi bi-arrow-clockwise"></i> Refresh');
            renderTODCards();
        }, 700);
    });

    $(document).ready(() => renderTODCards());
</script>

<style>
    .tod-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(8px);
        transition: all 0.25s ease-in-out;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

        .tod-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 208, 132, 0.2);
        }

    .btn-outline-primary:hover {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
        color: #fff;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: #fff;
    }

    .spin {
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        from

    {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }

    }
</style>
