@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="dashboard-container min-vh-100 py-4">

    <!-- Hero Section -->
    <section class="hero-section text-center text-light py-5 mb-5">
        <div class="container">
            <h1 class="fw-bold mb-3">⚡ Smart Energy Monitoring</h1>
            <p class="lead mb-0">Real-time insights into your connected AMI infrastructure — empowering a sustainable future 🌱</p>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container pb-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-dark">Dashboard Overview</h2>
            <p class="text-muted">Track live data, performance, and alerts from your energy network</p>
        </div>

        <!-- Summary Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Active Meters</h5>
                    <h2 class="fw-bold text-success">24</h2>
                    <p class="text-muted small">Total meters currently online</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Power Usage</h5>
                    <h2 class="fw-bold text-primary">312 kWh</h2>
                    <p class="text-muted small">Total energy used today</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Alerts</h5>
                    <h2 class="fw-bold text-danger">3</h2>
                    <p class="text-muted small">High consumption warnings</p>
                </div>
            </div>
        </div>

        <!-- Chart Placeholder -->
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <h5 class="fw-bold text-dark mb-3">Daily Power Usage Trends</h5>
            <div class="chart-placeholder d-flex align-items-center justify-content-center text-muted">
                <p>📊 Chart will load here (connect backend or JS chart library)</p>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        font-family: "Inter", system-ui, sans-serif;
        background: #f8f9fa;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, rgba(0,179,216,0.9), rgba(0,208,132,0.9)), url('https://images.unsplash.com/photo-1581091215367-59ab6a143df2?auto=format&fit=crop&w=1200&q=80') center/cover no-repeat;
        border-radius: 0 0 40px 40px;
        box-shadow: 0 8px 20px rgba(0, 179, 216, 0.3);
    }

        .hero-section h1 {
            font-size: 2.5rem;
            text-shadow: 0 0 8px rgba(255, 255, 255, 0.7);
        }

        .hero-section p {
            font-size: 1.1rem;
        }

    /* Cards */
    .card-energy {
        transition: all 0.3s ease-in-out;
        background-color: #ffffff;
    }

        .card-energy:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 18px rgba(0, 179, 216, 0.25);
        }

    .chart-placeholder {
        height: 300px;
        border: 2px dashed #cce5ff;
        border-radius: 12px;
        background-color: #f0faff;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 1.8rem;
        }
    }
</style>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        const token = localStorage.getItem("jwtToken");
        if (!token) {
            window.location.href = "/Account/Login";
        } else {
            $("#userName").text("Welcome, Energy User");
        }
    });

    $("#logoutBtn").click(function () {
        localStorage.removeItem("jwtToken");
        window.location.href = "/Account/Login";
    });
</script>
