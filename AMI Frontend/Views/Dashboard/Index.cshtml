@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="dashboard-container min-vh-100 py-4">

    <!-- Hero Section -->
    <section class="hero-section text-center text-light py-5 mb-5">
        <div class="container">
            <h1 class="fw-bold mb-3">⚡ Smart Energy Monitoring</h1>
            <p class="lead mb-0">Real-time insights into your connected AMI infrastructure — empowering a sustainable future 🌱</p>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container pb-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-dark">Dashboard Overview</h2>
            <p class="text-muted">Track live data, performance, and alerts from your energy network</p>
        </div>

        <!-- Summary Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Active Meters</h5>
                    <h2 class="fw-bold text-success">24</h2>
                    <p class="text-muted small">Total meters currently online</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Power Usage</h5>
                    <h2 class="fw-bold text-primary">312 kWh</h2>
                    <p class="text-muted small">Total energy used today</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4 card-energy text-center p-4">
                    <h5 class="fw-bold text-dark">Alerts</h5>
                    <h2 class="fw-bold text-danger">3</h2>
                    <p class="text-muted small">High consumption warnings</p>
                </div>
            </div>
        </div>

        <!-- Chart Placeholder -->
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <h5 class="fw-bold text-dark mb-3">Daily Power Usage Trends</h5>
            <div style="height: 400px;">
                <!-- reduced height -->
                <canvas id="powerUsageChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        font-family: "Inter", system-ui, sans-serif;
        background: #f8f9fa;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, rgba(0,179,216,0.9), rgba(0,208,132,0.9)), url('https://images.unsplash.com/photo-1581091215367-59ab6a143df2?auto=format&fit=crop&w=1200&q=80') center/cover no-repeat;
        border-radius: 0 0 40px 40px;
        box-shadow: 0 8px 20px rgba(0, 179, 216, 0.3);
    }

        .hero-section h1 {
            font-size: 2.5rem;
            text-shadow: 0 0 8px rgba(255, 255, 255, 0.7);
        }

        .hero-section p {
            font-size: 1.1rem;
        }

    /* Cards */
    .card-energy {
        transition: all 0.3s ease-in-out;
        background-color: #ffffff;
    }

        .card-energy:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 18px rgba(0, 179, 216, 0.25);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 1.8rem;
        }
    }
</style>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        const token = localStorage.getItem("jwtToken");
        if (!token) {
            window.location.href = "/Account/Login";
        } else {
            $("#userName").text("Welcome, Energy User");
        }
    });

    $("#logoutBtn").click(function () {
        localStorage.removeItem("jwtToken");
        window.location.href = "/Account/Login";
    });
</script>

<script>
    const ctx = document.getElementById('powerUsageChart').getContext('2d');

    const powerUsageChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
            datasets: [
                {
                    label: 'Meter 1',
                    data: [45, 52, 61, 70, 66, 75, 80],
                    borderColor: 'rgba(0, 123, 255, 1)',
                    backgroundColor: 'rgba(0, 123, 255, 0.2)',
                    tension: 0.4,
                    fill: true,
                    pointRadius: 5,
                    pointHoverRadius: 7
                },
                {
                    label: 'Meter 2',
                    data: [38, 42, 48, 55, 60, 65, 72],
                    borderColor: 'rgba(40, 167, 69, 1)',
                    backgroundColor: 'rgba(40, 167, 69, 0.2)',
                    tension: 0.4,
                    fill: true,
                    pointRadius: 5,
                    pointHoverRadius: 7
                },
                {
                    label: 'Meter 3',
                    data: [50, 55, 60, 62, 68, 74, 78],
                    borderColor: 'rgba(220, 53, 69, 1)',
                    backgroundColor: 'rgba(220, 53, 69, 0.2)',
                    tension: 0.4,
                    fill: true,
                    pointRadius: 5,
                    pointHoverRadius: 7
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false, // important to respect container height
            plugins: {
                legend: {
                    position: 'top',
                    labels: { font: { size: 14 } }
                },
                title: { display: false }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: { display: true, text: 'Energy Usage (kWh)', font: { size: 14 } }
                },
                x: {
                    title: { display: true, text: 'Day of the Week', font: { size: 14 } }
                }
            }
        }
    });
</script>
